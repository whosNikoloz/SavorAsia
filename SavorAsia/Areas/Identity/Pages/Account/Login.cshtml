@page
@model LoginModel

@{
    Layout = "_LayoutNoFooter";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
<link href="~/css/loginV1.css" rel="stylesheet" />


<section id="hero">
    <div class="main_div">
        <div class="title">Sign In</div>
        <div class="social_icons">
            <a href="#"><i class="fab fa-facebook-f"></i> <span>Facebook</span></a>
            <a href="#"><i class="fab fa-twitter"></i><span>Twitter</span></a>
        </div>
        <form id="account" method="post">
            <div class="input_box">
                <input type="text" asp-for="Input.UserName" aria-required="true" placeholder="UserName" required>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                <div class="icon"><i class="fas fa-user"></i></div>
            </div>
            <div class="input_box">
                <input type="password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Password" required>
                <div class="icon"><i class="fas fa-lock"></i></div>
            </div>
            <div class="option_div">
                <div class="check_box">
                    <input type="checkbox" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)
                </div>
                <div class="forget_div">
                    <a href="#">Forgot password?</a>
                </div>
            </div>
            <div class="input_box button">
                <input type="submit" id="login-submit" value="Login">
            </div>
            <div class="sign_up">
                Not a member? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">SignUp Now</a>
            </div>
            <hr />
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <p>Login unsuccessful. Please check your Username or Password.</p>
                </div>
            }
        </form>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
